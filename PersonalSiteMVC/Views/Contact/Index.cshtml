@model PersonalSiteMVC.Models.ContactViewModel

@{
    ViewData["Title"] = "Contact";
}

@*@section Contact{*@
    <section id="contact" class="contact">
        <div class="container">

            <div class="section-title">
                <h2>Contact</h2>
                <p>Connect with me here!</p>
            </div>

            <form asp-action="Index" class="php-email-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-6 form-group">
                        <input asp-for="Name" class="form-control" id="name" placeholder="Your Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group mt-3 mt-md-0">
                        <input asp-for="Email" class="form-control" name="email" id="email" placeholder="Your Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group mt-3">
                    <input asp-for="Subject" class="form-control" name="subject" id="subject" placeholder="Subject">
                    <span asp-validation-for="Subject" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <textarea asp-for="Message" class="form-control" placeholder="Message"></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>
                <div class="form-group mt-4 text-center">
                    <input type="submit" value="Send Message" class="btn btn-primary" />
                </div>
            </form>

        </div>
    </section><!-- End Contact Section -->
@*}*@

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
